#!/usr/bin/env node
var parser = require("nomnom");

function addCommit(id) {

}

parser.command('add')
    .option('commit_id', {
        position: 0,
        help: "Commit id",
        metavar: "COMMIT_ID"
    })
    .option('path', {
        position: 1,
        help: "path to checkout",
        metavar: "PATH"
    })
    .callback(function(opts) {
        addCommit(opts.id);
    })
    .help("Add a commit id to runtime.");

parser.nocommand()
    .callback(function(opts) {
        console.log(parser.getUsage())
    });

parser.parse();
